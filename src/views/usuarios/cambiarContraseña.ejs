<%- include ('../partials/head',{cssFile:'/css/stylesUsuarioEditPassword.css'})%>

    <body>
        <%-include ('../partials/headerYNav' ) %>
            <main>
                <div class="container">
                    <div class="title-container">
                        <h2 class="title">Editar Contraseña</h2>
                    </div>
                    <form class="user__form" action="/usuarios/cambiarContrasenia/<%= usuarioId%>?_method=put"
                        method="POST" enctype="application/x-www-form-urlencoded">

                        <div class="user__password-form block-input">

                            <input type="password" name="contraseniaVieja"
                                class="user__input-form contraseñaVieja <%= locals.errors && errors.contraseniaVieja ? 'is-invalid' : null %> contraseña-vieja"
                                placeholder="Contraseña Actual">
                            <i class="fa fa-eye-slash toggle-password"></i>

                        </div>
                        <small class="contraseña-vieja-msg"></small>
                        <% if(locals.errors && errors.contraseniaVieja) {%>
                            <div class="text-danger">
                                <%= errors.contraseniaVieja.msg %>
                            </div>
                            <% } %>

                                <div class="user__password-form block-input">

                                    <input type="password" name="contrasenia"
                                        class="user__input-form contraseñaNueva <%= locals.errors && errors.contrasenia ? 'is-invalid' : null %> nueva-contraseña"
                                        placeholder="Nueva Contraseña">
                                    <i class="fa fa-eye-slash toggle-password"></i>

                                </div>
                                <small class="contraseña-nueva-msg"></small>
                                <% if(locals.errors && errors.contrasenia) {%>
                                    <div class="text-danger">
                                        <%= errors.contrasenia.msg %>
                                    </div>
                                    <% } %>

                                        <div class="user__password-form block-input">

                                            <input type="password" name="confirmContrasenia"
                                                class="user__input-form contraseñaConfirm <%= locals.errors && errors.confirmContrasenia ? 'is-invalid' : null %> repetir-contraseña"
                                                placeholder="Repetir contraseña">
                                            <i class="fa fa-eye-slash toggle-password"></i>

                                        </div>
                                        <small class="repetir-contraseña-msg"></small>
                                        <% if(locals.errors && errors.confirmContrasenia) {%>
                                            <div class="text-danger">
                                                <%= errors.confirmContrasenia.msg %>
                                            </div>
                                            <% } %>

                                                <div class="user__buttons">
                                                    <button class="user__button btn ">Guardar cambios</button>
                                                </div>
                    </form>

                </div>
            </main>


    </body>
    <%- include ('../partials/footer') %>
        <script src="/js/usuarios/showHiddePassword.js"></script>

        </html>