<%-include ('partials/head',{cssFile:'/css/styleDetalle.css'})%>

  <body>
    <%-include ('partials/headerYNav') %>
      <main>
        <div class="brand__container">
          <section class="brand__section">
            <article class="brand__article">
              <h4 class="brand__title">Apple</h4>
              <ul class="brand__list">
                <li class="brand__item">iPhone 15 Pro</li>
                <li class="brand__item">iPhone 13 Pro Max</li>
                <li class="brand__item">iPhone SE</li>
              </ul>
            </article>

            <article class="brand__article">
              <h4 class="brand__title">Xiaomi</h4>
              <ul class="brand__list">
                <li class="brand__item">Redmi Note 11</li>
                <li class="brand__item">Redmi 12C</li>
                <li class="brand__item">Mi 13t</li>
              </ul>
            </article>

            <article class="brand__article">
              <h4 class="brand__title">Samsung</h4>
              <ul class="brand__list">
                <li class="brand__item">Galaxy S23</li>
                <li class="brand__item">Galaxy A04</li>
                <li class="brand__item">Galaxy Z Flip4</li>
              </ul>
            </article>
          </section>
        </div>

        <section class="offer__section">
          <article class="offer__article">
            <div class="offer__container">
              <h4 class="offer__title">20% Off de la semana</h4>
              <div class="offer">
                <div class="offer__image">
                  <img class="offer__image-img" src="/img/apple/iphone13/iphone13.png" alt="" />
                  <p class="p-white">Iphone 13 Pro Max</p>
                </div>
                <div class="offer__image">
                  <img class="offer__image-img" src="/img/xiaomi/redmi10C/redmi10C.png" alt="" />
                  <p class="p-white">Xiaomi Redmi 10c</p>
                </div>
                <div class="offer__image">
                  <img class="offer__image-img" src="/img/samsung/samsungGalaxyA54/samsungA54.png" alt="" />
                  <p class="p-white">Samsung Galaxy A54</p>
                </div>
              </div>
            </div>
          </article>
        </section>

        <section class="most-searched__section">
          <article class="most-searched__article">
            <h2 class="most-searched__title">Lo mas buscado</h2>

            <div class="most-searched__card-container">
              <div class="most-searched__card">
                <div class="card">
                  <img class="card__image" src="/img/apple/iphone13/iphone13.png" alt="" />
                </div>

                <div class="card__p">
                  <p class="p">Iphone 13 Pro Max</p>
                </div>
                <%- include('partials/accionesProd') %>
              </div>

              <div class="most-searched__card">
                <div class="card">
                  <img class="card__image" src="/img/xiaomi/redmi10C/redmi10C.png" alt="" />
                </div>

                <div class="card__p">
                  <p class="p">Xiaomi Redmi 10c</p>
                </div>
                <%- include('partials/accionesProd') %>
              </div>

              <div class="most-searched__card">
                <div class="card">
                  <img class="card__image" src="/img/samsung/samsungGalaxyA54/samsungA54.png" alt="" />
                </div>

                <div class="card__p">
                  <p class="p">Samsung Galaxy A54</p>
                </div>
                <%- include('partials/accionesProd') %>
              </div>
          </article>
        </section>
      </main>
      <%- include ('partials/footer') %>
  </body>

  </html>