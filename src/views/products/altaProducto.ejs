<%-include ('../partials/head',{cssFile:'/css/altaProducto.css'})%>

    <body>
        <%-include ('../partials/headerYNav') %>

            <main class="main">
                <div class="container__form">
                    <div class="title-container">
                        <h2 class="title">Crear producto</h2>
                    </div>
                    <form class="alta__form" action="/products" method="POST" enctype="multipart/form-data">
                        <div class="alta__name-form block-input">
                            <label for="producto">Producto: </label>
                            <input class="name__input-form" type="text" id="producto" placeholder="Nombre del producto" required />
                        </div>

                        <div class="alta__descripcion-form block-input">
                            <label for="descripcion">Descripción:</label>
                            <input class="descripcion__input-form" type="text" placeholder="Descripcion del producto" required />
                        </div>

                        <div class="alta__imagen-form block-input">
                            <label for="imagen">Imagen:</label>
                            <input type="file" name="imagen" accept=".jpg" multiple
                            id="imagen">
                        </div>

                        <div class="alta__categ-form block-input">
                            <label for="categoria">Categoria:</label>
                            <select name="category" id="category">
                                <option value="Smartphone">Smartphone</option>
                                <option value="Ipad">Ipad</option>
                                <option value="Tablet">Tablet</option>
                            </select>
                        </div>

                        <div class="alta__color-form block-input">
                            <label for="color">Color</label>
                            <select name="color" id="color">
                                <option value="Rojo">Rosa</option>
                                <option value="Verde">Verde</option>
                                <option value="Gris">Gris</option>
                                <option value="Amarillo">Amarillo</option>
                            </select>
                        </div>

                        <div class="alta__precio-form block-input">
                            <label for="precio">Precio:</label>
                            <input type="number" id="precio" name="precio" placeholder="Precio del producto">
                        </div>

                        <div class="alta__button">
                            <button class="option__button" type="submit">Añadir producto</button>
                            <button class="option__button" type="reset">Descartar formulario</button>
                            </button>
                        </div>
                    </form>

                </div>
            </main>
            <%- include ('../partials/footer') %>
    </body>
    <%- include ('../partials/script-menu') %>
    </html>
    

