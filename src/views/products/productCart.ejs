<%-include ('../partials/head',{cssFile:'/css/styleCart.css'})%>
<body>
    <%-include ('../partials/headerYNav') %>

    <main>
        <section class="carrito">
            <table class="table">

                <tr class="main-productos">
                    <th class="main-productos__prod">Producto</th>
                    <th class="main-productos__cant">Cantidad</th>
                    <th class="main-productos__nomb">Nombre</th>
                    <th class="main-productos__precio">Precio</th>
                    <th class="main-productos__subtot">Sub total</th>
                </tr>

                <tr class="detalle-producto1">
                    <td> <img class="det-prod__img1" src="/img/apple/iphone13/iphone13.png" alt=""></td>
                    <td><input class="input-contador-prod" type="number" value="1" min="1"></td>
                    <td>iPhone 13</td>
                    <td>$1.322.142</td>
                    <td>$1.322.142</td>
                </tr>

                <tr class="detalle-producto2">
                    <td> <img class="det-prod__img2" src="/img/apple/iphone14/iphone14.png" alt="">
                    </td>
                    <td><input class="input-contador-prod" type="number" value="1" min="1"></td>
                    <td>Iphone 14</td>
                    <td>$1.544.999</td>
                    <td>$1.544.999</td>
                </tr>
            </table>

            <div class="saldo-total">
                <span class="text-total">Total a pagar: </span>
                <h3 class="total">$2.867.141</h3>
            </div>

            <div class="botones-carrito">
                <button class="btn-1"> Actualizar carrito
                </button>
                <button class="btn-2"> Realizar compra
                </button>

            </div>
        </section>

        <div class="title-prod">
            <h4 class="title">PRODUCTOS DESTACADOS</h4>
        </div>

        <section class="productos-destacados">

            <article class="tarjeta-producto">
                <img class="producto__img" src="/img/apple/iphone15/iphone15.png" alt="iPhone-15">
                <div class="bar-inf-prod">
                    <h4 class="tarjeta-producto__h4">iPhone 15</h4>
                    <div class="tarjeta-producto__buttons">
                        <div data-tooltip="$1.764.532" class="button">
                            <div class="button-wrapper">
                                <div class="text">Agregar</div>
                                <span class="icon">
                                    <svg viewBox="0 0 16 16" class="bi bi-cart2" fill="currentColor" height="16"
                                        width="16" xmlns="http://www.w3.org/2000/svg">
