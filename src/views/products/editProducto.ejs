<%-include ('../partials/head',{cssFile:'/css/editProducto.css'})%>

  <body>
    <%-include ('../partials/headerYNav') %>

      <main>
        <div class="container__form">
          <div class="title-container">
            <h2 class="title">Editar producto</h2>
          </div>
          <form class="edit__form" action="" method="POST">
            <div class="edit__name-form block-input">
              <label for="producto">Nombre del producto: </label>
              <input class="login__input-form" type="email" placeholder="Edita el nombre del producto" required />
            </div>

            <div class="edit__descripcion-form block-input">
              <label for="descripcion">Descripción:</label>
              <textarea name="descripcion" >Edita la descripción del producto</textarea>
            </div>

            <div class="edit__imagen-form block-input">
              <label>Imagen:</label>
              <input type="file" name="imagen" accept=".jpg" multiple>
            </div>

            <div class="edit__categ-form block-input">
              <label for="categoria">Categoria:</label>
              <select name="category" id="category">
                <option value="Smartphone">Smartphone</option>
                <option value="Ipad">Ipad</option>
                <option value="Tablet">Tablet</option>
              </select>
            </div>

            <div class="edit__color-form block-input">
              <label for="color">Color</label>
              <select name="color" id="color">
                <option value="Rojo">Rosa</option>
                <option value="Verde">Verde</option>
                <option value="Gris">Gris</option>
                <option value="Amarillo">Amarillo</option>
              </select>
            </div>

            <div class="edit__precio-form block-input">
              <label for="precio">Precio:</label>
              <input type="number" id="precio" name="precio" placeholder="Precio del producto">
            </div>

            <div class="edit__buttons">
              <button class="submit-button" type="submit">Añadir producto</button>
              <button class="clean-button" type="reset">Descartar formulario</button>
              </button>
            </div>
          </form>
        </div>
      </main>
  </body>

  <%- include ('../partials/footer') %>